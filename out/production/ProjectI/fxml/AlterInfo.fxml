<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="270.0" prefWidth="260.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.AlterInfoController">
   <top>
      <FlowPane alignment="CENTER" prefHeight="50.0" prefWidth="262.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Thông tin">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </Label>
            <ComboBox fx:id="headers" onHidden="#choose" prefWidth="150.0">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </ComboBox>
         </children>
      </FlowPane>
   </top>
   <center>
      <FlowPane alignment="CENTER" prefHeight="130.0" prefWidth="262.0" rowValignment="TOP" BorderPane.alignment="CENTER">
         <children>
            <Label text="Nội dung">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </Label>
            <TextArea fx:id="infoText" prefHeight="110.0" prefWidth="150.0">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </TextArea>
         </children>
      </FlowPane>
   </center>
   <bottom>
      <FlowPane alignment="CENTER" prefHeight="72.0" prefWidth="262.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="clearBtn" mnemonicParsing="false" onMouseClicked="#clear" text="XOÁ">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="saveBtn" mnemonicParsing="false" onMouseClicked="#save" text="LƯU">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onMouseClicked="#cancel" text="THOÁT">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </FlowPane>
   </bottom>
</BorderPane>
