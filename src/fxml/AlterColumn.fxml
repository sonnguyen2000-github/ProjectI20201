<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<BorderPane maxWidth="-Infinity" prefHeight="212.0" prefWidth="253.0" style="-fx-background-color: beige;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AlterColumnController">
    <left>
        <FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="166.0" prefWidth="95.0" BorderPane.alignment="CENTER">
            <Label text="Tên mục">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <FlowPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </FlowPane.margin>
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                </padding>
            </Label>
            <Label text="Thông tin mẫu">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <FlowPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </FlowPane.margin>
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                </padding>
            </Label>
        </FlowPane>
    </left>
    <right>
        <FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="190.0" prefWidth="140.0" BorderPane.alignment="CENTER">
            <TextField fx:id="columnName">
                <FlowPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </FlowPane.margin>
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                </padding>
            </TextField>
            <TextArea fx:id="info" prefHeight="100.0" prefWidth="50.0">
                <FlowPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </FlowPane.margin>
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                </padding>
            </TextArea>
        </FlowPane>
    </right>
    <bottom>
        <FlowPane alignment="TOP_CENTER" prefHeight="44.0" prefWidth="302.0" style="-fx-background-color: #afaaaa;" BorderPane.alignment="CENTER">
            <Button fx:id="saveBtn" mnemonicParsing="false" onMouseClicked="#save" text="THÊM">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <FlowPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </FlowPane.margin>
            </Button>
            <Button fx:id="clearBtn" mnemonicParsing="false" onMouseClicked="#clear" text="XOÁ">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <FlowPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </FlowPane.margin>
            </Button>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onMouseClicked="#cancel" text="THOÁT">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <FlowPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </FlowPane.margin>
            </Button>
        </FlowPane>
    </bottom>
</BorderPane>
